<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F3F3"
    tools:context=".PostingActivity">

    <EditText
        android:id="@+id/textPosting"
        android:layout_width="270dp"
        android:layout_height="350dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:fontFamily="@font/open_sans"
        android:gravity="start|top"
        android:hint="Post"
        android:inputType="textMultiLine"
        android:lines="5"
        android:singleLine="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPosting"
        android:layout_width="166dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/makepostbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sticker2" />

    <ImageView
        android:id="@+id/sticker1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:contentDescription="TODO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPosting"
        app:srcCompat="@android:color/holo_blue_bright"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/sticker2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:contentDescription="TODO"
        app:layout_constraintLeft_toRightOf="@+id/sticker1"
        app:layout_constraintTop_toBottomOf="@+id/textPosting"
        app:srcCompat="@android:color/holo_green_light"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/sticker3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:contentDescription="TODO"
        app:layout_constraintLeft_toRightOf="@+id/sticker2"
        app:layout_constraintTop_toBottomOf="@+id/textPosting"
        app:srcCompat="@android:color/holo_purple"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/sticker4"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:contentDescription="TODO"
        app:layout_constraintLeft_toRightOf="@+id/sticker3"
        app:layout_constraintTop_toBottomOf="@+id/textPosting"
        app:srcCompat="@android:color/holo_orange_light"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/gotoHomePosting"
        android:layout_width="153dp"
        android:layout_height="44dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/menubtn_makepost"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPosting" />

    <Button
        android:id="@+id/stiker1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:text="Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPosting" />

    <Button
        android:id="@+id/stiker2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/stiker1"
        app:layout_constraintTop_toBottomOf="@+id/textPosting" />

    <Button
        android:id="@+id/stiker3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/stiker2"
        app:layout_constraintTop_toBottomOf="@+id/textPosting" />

    <Button
        android:id="@+id/stiker4"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="28dp"
        android:text="Button"
        app:layout_constraintStart_toEndOf="@+id/stiker3"
        app:layout_constraintTop_toBottomOf="@+id/textPosting" />

</android.support.constraint.ConstraintLayout>