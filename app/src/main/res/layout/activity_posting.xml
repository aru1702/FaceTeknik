<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostingActivity">

    <EditText
        android:id="@+id/textPosting"
        android:layout_width="270dp"
        android:layout_height="284dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="post"
        android:inputType="textMultiLine"
        android:lines="5"
        android:singleLine="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonPosting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="8dp"
        android:text="Post"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sticker2" />

    <ImageView
        android:id="@+id/sticker1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="30dp"
        android:contentDescription="TODO"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPosting"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="30dp"
        android:contentDescription="TODO"
        app:layout_constraintTop_toBottomOf="@+id/textPosting"
        app:layout_constraintLeft_toRightOf="@+id/sticker1"
        android:layout_marginLeft="20dp"
        tools:srcCompat="@tools:sample/avatars"
        android:id="@+id/sticker2"/>

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="30dp"
        android:contentDescription="TODO"
        app:layout_constraintTop_toBottomOf="@+id/textPosting"
        app:layout_constraintLeft_toRightOf="@+id/sticker2"
        android:layout_marginLeft="20dp"
        tools:srcCompat="@tools:sample/avatars"
        android:id="@+id/sticker3" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="30dp"
        android:contentDescription="TODO"
        app:layout_constraintTop_toBottomOf="@+id/textPosting"
        app:layout_constraintLeft_toRightOf="@+id/sticker3"
        android:layout_marginLeft="20dp"
        tools:srcCompat="@tools:sample/avatars"
        android:id="@+id/sticker4" />

    <Button
        android:id="@+id/gotoHomePosting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:text="Back to Menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonPosting" />
</android.support.constraint.ConstraintLayout>